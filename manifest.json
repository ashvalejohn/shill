{
  "manifest_version": 2,
  "name": "Shill",
  "author": "ashvalejohn",
  "version": "0.0.1",
  "description": "A Chrome extension that displays product information listed in the description box of a YouTube video.",
  "background": {
    "scripts" : [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "logo/shill-logo-active-16.png",
    "24": "logo/shill-logo-active-24.png",
    "32": "logo/shill-logo-active-32.png"
  },
  "page_action": {
    "default_icon": {
      "16": "logo/shill-logo-active-16.png",
      "24": "logo/shill-logo-active-24.png",
      "32": "logo/shill-logo-active-32.png"
    },
    "default_title": "Display products from the description box."
  },
  "permissions": [
    "declarativeContent",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": [
    "shill-style.css"
  ]
}
